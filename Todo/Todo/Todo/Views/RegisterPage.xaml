<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:views="clr-namespace:Todo.Views"
             x:Class="Todo.Views.RegisterPage">

    <!--<ContentPage.BindingContext>
        <views:RegisterPage/>
    </ContentPage.BindingContext>-->
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
            <Entry Placeholder="Enter Email" Text="{Binding EmailId}" />
            <Entry Placeholder="Enter Password" Text="{Binding Password}"/>
            <Entry Placeholder="Enter Confirm Password" Text="{Binding ConfirmPassword}"/>
            <Button Text="Register" Clicked="RegisterClicked" />
            <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand">
                <Label Text="Already have account?" VerticalOptions="CenterAndExpand"/>
                <Button Text="Login" TextColor="Blue" Clicked="LoginClicked" BackgroundColor="Transparent"/>
                
            </StackLayout>
            <Button Text="Google SignIn" TextColor="White" Clicked="GoogleClicked" BackgroundColor="Blue"/>
            <Button Text="Facebook SignIn" TextColor="White" Clicked="FaceBookClicked" BackgroundColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>