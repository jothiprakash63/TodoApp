<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Todo.Views.LoginPage"
             Padding="5"
             >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
            <Entry Placeholder="Enter Email" Text="{Binding EmailId}"/>
            <Entry Placeholder="Enter Password" Text="{Binding Password}"/>
            <Button Text="Login" Clicked="LoginClicked" />
            <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand">
                <Label Text="Not yet Registered?" VerticalOptions="CenterAndExpand"/>
                <Button Text="Sign In" TextColor="Blue" Clicked="SignInClicked" BackgroundColor="Transparent"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>